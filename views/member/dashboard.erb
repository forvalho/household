<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center">
              <% if current_member.avatar_url.present? %>
                  <img src="<%= current_member.avatar_url %>" class="title-avatar me-3" alt="<%= current_member.name %>">
              <% else %>
                  <div class="title-avatar me-3"><%= current_member.name.first.upcase %></div>
              <% end %>
              <h1 class="mb-0"><%= current_member.name %>'s Tasks</h1>
            </div>
            <% if admin_logged_in? %>
                <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#newTaskModal">
                    <i class="fas fa-plus"></i> Add New Task
                </button>
            <% end %>
        </div>
    </div>
</div>

<div class="row">
    <!-- Sidebar -->
    <div class="col-md-3 mb-4">
        <!-- Date Filter (Collapsible) -->
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center" data-bs-toggle="collapse" data-bs-target="#dateFilterCollapse" style="cursor:pointer;">
                <span>
                    <i class="fas fa-calendar-alt me-2"></i>
                    <%# Dynamic title for filter box %>
                    <% case @current_date_filter
                       when 'today' %>
                        Today
                    <% when 'yesterday' %>
                        Yesterday
                    <% when 'this_week' %>
                        This week
                    <% when 'last_week' %>
                        Last week
                    <% when 'this_month' %>
                        This month
                    <% when 'last_month' %>
                        Last month
                    <% when 'custom' %>
                        <small class="text-muted">
                            (<%= @start_date.strftime('%d/%m/%Y') %>â€“<%= @end_date.strftime('%d/%m/%Y') %>)
                        </small>
                    <% end %>
                </span>
                <i class="fas fa-chevron-right" id="dateFilterChevron"></i>
            </div>
            <div class="collapse" id="dateFilterCollapse">
                <div class="card-body">
                    <form method="GET" action="/dashboard" class="row g-3 align-items-end" id="date-filter-form">
                        <div class="col-12">
                            <select class="form-select" id="date_filter" name="date_filter" onchange="autoSubmitDateFilter()">
                                <option value="today" <%= 'selected' if @current_date_filter == 'today' %>>Show today</option>
                                <option value="yesterday" <%= 'selected' if @current_date_filter == 'yesterday' %>>Show yesterday</option>
                                <option value="this_week" <%= 'selected' if @current_date_filter == 'this_week' %>>Show this week</option>
                                <option value="last_week" <%= 'selected' if @current_date_filter == 'last_week' %>>Show last week</option>
                                <option value="this_month" <%= 'selected' if @current_date_filter == 'this_month' %>>Show this month</option>
                                <option value="last_month" <%= 'selected' if @current_date_filter == 'last_month' %>>Show last month</option>
                                <option value="custom" <%= 'selected' if @current_date_filter == 'custom' %>>Custom range</option>
                            </select>
                        </div>
                        <div class="col-12" id="custom_date_container" style="display: <%= @current_date_filter == 'custom' ? 'flex' : 'none' %>; gap: 0.5rem; align-items: end;">
                            <div class="flex-fill">
                                <label for="custom_date_from" class="form-label">From</label>
                                <input type="date" class="form-control" id="custom_date_from" name="custom_date_from" value="<%= @current_custom_date_from %>" onchange="autoSubmitDateFilter()">
                            </div>
                            <div class="flex-fill">
                                <label for="custom_date_to" class="form-label">To</label>
                                <input type="date" class="form-control" id="custom_date_to" name="custom_date_to" value="<%= @current_custom_date_to %>" onchange="autoSubmitDateFilter()">
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <!-- Available Tasks (Collapsible) -->
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center" data-bs-toggle="collapse" data-bs-target="#availableTasksCollapse" style="cursor:pointer;">
                <span><i class="fas fa-clipboard-list fa-lg me-2"></i> Available Tasks</span>
                <i class="fas fa-chevron-down" id="availableTasksChevron"></i>
            </div>
            <div class="collapse show" id="availableTasksCollapse">
                <div class="card-body">
                    <div class="row">
                        <% @task_templates.each do |template| %>
                            <div class="col-12 mb-3">
                                <div class="task-card difficulty-<%= template.medal %>" data-template-id="<%= template.id %>">
                                    <div class="card-body d-flex flex-column">
                                        <!-- Top Section: Title & Points -->
                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                            <h6 class="mb-0 fw-bold"><%= template.title %></h6>
                                            <% if template.generic_task? %>
                                                <span class="badge bg-secondary" title="Custom difficulty">
                                                    <i class="fas fa-edit"></i> Custom
                                                </span>
                                            <% else %>
                                                <span class="medal-badge" title="<%= pluralize(template.points_value, 'point') %>">
                                                    <i class="fas fa-medal medal-<%= template.medal %>"></i>
                                                </span>
                                            <% end %>
                                        </div>

                                        <!-- Optional Description -->
                                        <% if template.generic_task? %>
                                            <p class="small text-muted mb-2">Create your own task with custom title and difficulty</p>
                                        <% elsif template.description.present? %>
                                            <p class="small text-muted mb-2"><%= template.description %></p>
                                        <% end %>

                                        <!-- Bottom Section: Actions & Tags -->
                                        <div class="mt-auto">
                                            <!-- Actions: Assign Template -->
                                            <div class="task-actions-container mb-2">
                                                <% if template.generic_task? %>
                                                    <!-- Generic Task: Show modal button -->
                                                    <button class="btn btn-sm btn-outline-secondary" type="button" data-bs-toggle="modal" data-bs-target="#genericTaskModal">
                                                        <i class="fas fa-user-plus"></i>
                                                        <span class="ms-2">Assign Task</span>
                                                    </button>
                                                <% else %>
                                                    <!-- Regular Template: Show dropdown -->
                                                    <!-- Assignee Dropdown -->
                                                    <div class="assignee-selector dropdown">
                                                        <button class="btn btn-sm btn-outline-secondary dropdown-toggle assignee-dropdown-btn" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                            <i class="fas fa-user-plus"></i>
                                                            <span class="ms-2">Assign Task</span>
                                                        </button>
                                                        <ul class="dropdown-menu assignee-dropdown-menu">
                                                            <% Member.all.order(:name).each do |member| %>
                                                                <li>
                                                                    <form action="/task-templates/<%= template.id %>/assign" method="post" class="assignee-form">
                                                                        <input type="hidden" name="member_id" value="<%= member.id %>">
                                                                        <button type="submit" class="dropdown-item" <%= 'disabled' unless admin_logged_in? || member.id == current_member.id %>>
                                                                            <% if member.avatar_url.present? %>
                                                                                <img src="<%= member.avatar_url %>" class="user-avatar me-2" alt="<%= member.name %>">
                                                                            <% else %>
                                                                                <div class="user-avatar me-2"><%= member.name.first.upcase %></div>
                                                                            <% end %>
                                                                            <%= member.name %>
                                                                        </button>
                                                                    </form>
                                                                </li>
                                                            <% end %>
                                                        </ul>
                                                    </div>
                                                <% end %>
                                            </div>

                                            <!-- Tags: Category -->
                                            <div class="task-tags">
                                                <% if template.category.present? %>
                                                    <span class="badge bg-secondary"><%= template.category.name %></span>
                                                <% end %>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Main Content: Kanban Board -->
    <div class="col-md-9">
        <div class="row g-3">
            <% @tasks_by_day = @tasks_by_day.presence || { Date.today => { todo: [], in_progress: [], done: [] } } %>
            <% @tasks_by_day.each do |date, day_tasks| %>
                <div class="col-12 mb-2">
                    <div class="row">
                        <div class="col">
                            <div class="kanban-column">
                                <h6 class="text-center mb-3">
                                    <i class="fas fa-list text-primary"></i> To Do
                                    <span class="badge bg-primary ms-1"><%= day_tasks[:todo].count %></span>
                                </h6>
                                <div class="task-list" data-status="todo" data-date="<%= date %>">
                                    <% if day_tasks[:todo].any? %>
                                        <% day_tasks[:todo].each do |task| %>
                                            <%= erb :'common/task_card', locals: { task: task } %>
                                        <% end %>
                                    <% else %>
                                        <div class="text-center text-muted">No tasks</div>
                                    <% end %>
                                </div>
                            </div>
                        </div>
                        <div class="col">
                            <div class="kanban-column">
                                <h6 class="text-center mb-3">
                                    <i class="fas fa-spinner text-warning"></i> In Progress
                                    <span class="badge bg-warning text-dark ms-1"><%= day_tasks[:in_progress].count %></span>
                                </h6>
                                <div class="task-list" data-status="in_progress" data-date="<%= date %>">
                                    <% if day_tasks[:in_progress].any? %>
                                        <% day_tasks[:in_progress].each do |task| %>
                                            <%= erb :'common/task_card', locals: { task: task } %>
                                        <% end %>
                                    <% else %>
                                        <div class="text-center text-muted">No tasks</div>
                                    <% end %>
                                </div>
                            </div>
                        </div>
                        <div class="col">
                            <div class="kanban-column">
                                <h6 class="text-center mb-3">
                                    <i class="fas fa-check-circle text-success"></i> Done
                                    <span class="badge bg-success ms-1"><%= day_tasks[:done].count %></span>
                                </h6>
                                <div class="task-list" data-status="done" data-date="<%= date %>">
                                    <% if day_tasks[:done].any? %>
                                        <% day_tasks[:done].each do |task| %>
                                            <%= erb :'common/task_card', locals: { task: task } %>
                                        <% end %>
                                    <% else %>
                                        <div class="text-center text-muted">No tasks</div>
                                    <% end %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>

