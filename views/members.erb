<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <h1><i class="fas fa-users"></i> Member Management</h1>
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#newMemberModal">
                <i class="fas fa-plus"></i> Add New Member
            </button>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-list"></i> Household Members
                </h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Member</th>
                                <th>Avatar</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% @members.each do |member| %>
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="user-avatar me-2" style="background-image: url('<%= member.avatar_url %>'); background-size: cover;">
                                            </div>
                                            <strong><%= member.name %></strong>
                                        </div>
                                    </td>
                                    <td><%= member.avatar_url %></td>
                                    <td>
                                        <span class="badge <%= member.active? ? 'bg-success' : 'bg-secondary' %>">
                                            <%= member.active? ? 'Active' : 'Inactive' %>
                                        </span>
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <button class="btn btn-outline-primary" onclick="editMember(<%= member.id %>)">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                            <button class="btn btn-outline-warning" onclick="toggleMemberStatus(<%= member.id %>)">
                                                <i class="fas fa-power-off"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            <% end %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- New Member Modal -->
<div class="modal fade" id="newMemberModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-user-plus"></i> Add New Member
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form method="POST" action="/admin/members">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="name" class="form-label">Full Name</label>
                        <input type="text" class="form-control" id="name" name="name" required>
                    </div>
                    <div class="mb-3">
                        <label for="avatar_url" class="form-label">Avatar URL</label>
                        <input type="text" class="form-control" id="avatar_url" name="avatar_url" placeholder="https://example.com/avatar.png">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Create Member
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

